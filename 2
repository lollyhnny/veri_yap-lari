using System;

class Program
{ 
    static void bilg(int a) //bu methodu kullanarak tek sayıları ekrana yazdıralım
    {
        if (a >= 16) return; //sınır değerlerine dikkat etmek lazım çünkü a==16 yaparsak 16 hariç hepsinde çalışır

        Console.WriteLine(a);
        bilg(a + 2); // 1 3 5 7 9 11 13 

    }
 
    static int d = 1;
    static void Main(string[] args)
    {
        bilg(1);
    }
}    
