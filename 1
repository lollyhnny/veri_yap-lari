using System;

class Program
{   static void bilg(int a)
    {
        if (a == 5) return; // (a==55555555) yapabiliriz ama kullanılan stack patlar
        Console.WriteLine(a);  
        bilg(a + 1); //çıktı 0 1 2 3 4
    }
    // eğer bu methodu 
