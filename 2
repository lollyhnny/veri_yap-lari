using System;

class Program
{ 
    static void bilg(int a) //bu methodu kullanarak tek sayıları ekrana yazdıralım
    {
        if (a >= 15) return; //sınır değerlerine dikkat etmek lazım çünkü a==15 yaparsak 15 hariç hepsinde çalışır

        Console.WriteLine(a);
        bilg(a + 2);

    }
 
    static int d = 1;
    static void Main(string[] args)
    {
        bilg(1);
    }
}    
